# Development Container Environment Variables
# Copy this to .env.local and customize as needed

# Node environment
NODE_ENV=development

# Next.js settings
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_TELEMETRY_DISABLED=1

# AWS Configuration (for local development)
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Optional services
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/v1z3r_dev

# Development features
NEXT_PUBLIC_ENABLE_WEBGPU=true
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITOR=true

# API Keys (development only)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# Monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Feature flags
NEXT_PUBLIC_FEATURE_AI_EFFECTS=true
NEXT_PUBLIC_FEATURE_COLLABORATION=true
NEXT_PUBLIC_FEATURE_CLOUD_SYNC=false