# VJ Application Environment Configuration
# Copy this file to .env.local and fill in the required values

# =============================================================================
# GitHub Integration (for MCP GitHub server)
# =============================================================================
# GitHub Personal Access Token with repo access
# Required for GitHub MCP server functionality
GITHUB_TOKEN=your_github_token_here

# GitHub repository information
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name

# =============================================================================
# AWS Configuration (for preset storage and infrastructure)
# =============================================================================
# AWS credentials for DynamoDB and S3 access
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# AWS S3 bucket for asset storage
AWS_S3_BUCKET=your-vj-assets-bucket

# DynamoDB table names
AWS_DYNAMODB_PRESETS_TABLE=vj-presets-dev
AWS_DYNAMODB_SESSIONS_TABLE=vj-sessions-dev
AWS_DYNAMODB_CONFIG_TABLE=vj-config-dev

# =============================================================================
# WebSocket Configuration (for sync-core)
# =============================================================================
# WebSocket server URL for real-time collaboration
WEBSOCKET_URL=wss://your-websocket-api.execute-api.us-east-1.amazonaws.com/dev

# WebSocket connection options
WEBSOCKET_RECONNECT_DELAY=1000
WEBSOCKET_MAX_RETRIES=5

# =============================================================================
# API Configuration
# =============================================================================
# REST API base URL
API_BASE_URL=https://your-api.execute-api.us-east-1.amazonaws.com/dev

# API timeouts (milliseconds)
API_TIMEOUT=30000

# =============================================================================
# Performance and Analytics
# =============================================================================
# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Analytics tracking (optional)
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=your_analytics_key

# =============================================================================
# Development Configuration
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development

# Debug mode
DEBUG=false

# Enable verbose logging
VERBOSE_LOGGING=true

# Hot reload for development
FAST_REFRESH=true

# =============================================================================
# Audio/Video Configuration
# =============================================================================
# Default audio analysis settings
DEFAULT_AUDIO_SENSITIVITY=50
DEFAULT_MICROPHONE_ENABLED=false

# Video capture settings
DEFAULT_CAMERA_ENABLED=false
VIDEO_RESOLUTION=1920x1080

# =============================================================================
# Security Configuration
# =============================================================================
# JWT secret for authentication (if implemented)
JWT_SECRET=your_jwt_secret_here

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# CDK Deployment Configuration
# =============================================================================
# CDK deployment stage
CDK_STAGE=dev

# Domain configuration
CDK_DOMAIN_NAME=your-domain.com
CDK_ENABLE_CLOUDFRONT=true
CDK_ENABLE_BACKUP=true
CDK_ENABLE_AUTH=false

# =============================================================================
# Testing Configuration
# =============================================================================
# Test environment settings
TEST_TIMEOUT=30000
TEST_SILENT=false

# Mock services in tests
MOCK_AWS_SERVICES=true
MOCK_WEBSOCKET=true

# =============================================================================
# Feature Flags
# =============================================================================
# Enable experimental features
ENABLE_LYRICS_VISUALIZATION=true
ENABLE_CAMERA_INTEGRATION=true
ENABLE_COLLABORATIVE_MODE=true
ENABLE_PRESET_SHARING=true

# Beta features
ENABLE_AI_EFFECTS=false
ENABLE_MIDI_CONTROL=false