# v1z3r Environment Variables Example
# Copy this file to .env.local and fill in the values

# Node Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001

# AWS Configuration (Required for cloud features)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=v1z3r-assets
AWS_DYNAMODB_TABLE=v1z3r-presets

# GitHub Token (Required for MCP integration)
GITHUB_TOKEN=your_github_personal_access_token

# Optional: External Services
# OPENAI_API_KEY=your_openai_api_key
# SENTRY_DSN=your_sentry_dsn

# Optional: Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id

# Optional: Feature Flags
NEXT_PUBLIC_ENABLE_LYRICS=true
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_CLOUD_STORAGE=false